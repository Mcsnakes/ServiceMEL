<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="sp.fr.servicemel.DetailPharmacie">

    <TextView
        android:id="@+id/textViewNamePharmacie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:paddingTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="Pharmacie Machin" />

    <ImageView
        android:id="@+id/imageViewPharmacie"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@mipmap/pharmacie" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textViewMotHoraire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:text="Horaire d'ouverture : " />

        <TextView
            android:id="@+id/textViewHorairePharmacie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="TextView" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewGotToMap"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="right"
        android:foregroundGravity="bottom"
        android:layout_marginRight="20dp"
        android:src="@mipmap/googlemaps" />

</LinearLayout>
